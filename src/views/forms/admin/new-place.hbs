{{> admin/adminmenu}}

<form action="/admin/new-place" method="POST">
  <div class="field">
    <p class="control has-icons-left has-icons-right">
      <input class="input" type="text" placeholder="Place Name" name="placeName" />
      <span class="icon is-small is-left">
        <i class="fas fa-house"></i>
      </span>
    </p>
  </div>
  <div class="field">
    <p class="control has-icons-left">
      <input class="input" type="text" placeholder="Address" name="placeAddress" />
      <span class="icon is-small is-left">
        <i class="fas fa-map-marker"></i>
      </span>
    </p>
  </div>
  <div class="field">
    <p class="control has-icons-left">
      <input class="input" type="text" placeholder="latitude" name="lat" />
      <span class="icon is-small is-left">
        <i class="fas fa-map"></i>
      </span>
    </p>
  </div>
  <div class="field">
    <p class="control has-icons-left">
      <input class="input" type="text" placeholder="longitude" name="lng" />
      <span class="icon is-small is-left">
        <i class="fas fa-map"></i>
      </span>
    </p>
  </div>
  <div class="field">
    <p class="control">
      <button class="button is-success">
        Submit
      </button>
    </p>
  </div>
</form>